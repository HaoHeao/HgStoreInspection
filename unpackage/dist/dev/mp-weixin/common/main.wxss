.no-data {
  padding-top: 320rpx;
  text-align: center;
}
.no-data .img-v {
  width: 184rpx;
  height: 176rpx;
  margin: auto auto;
}
.no-data .img-v .img {
  width: 100%;
  height: 100%;
}
.no-data .txt {
  padding-top: 30rpx;
  width: 100%;
  color: #C1C7CE;
  font-size: 20rpx;
  text-align: center;
}
.null-data {
  width: 100%;
  height: 20rpx;
  margin: 40rpx 0rpx;
  position: relative;
}
.null-data .text {
  width: auto;
  height: 20rpx;
  white-space: nowrap;
  line-height: 20rpx;
  text-align: center;
  position: absolute;
  left: calc(50% - 78rpx);
  top: 0rpx;
  z-index: 2;
  padding: 0rpx 20rpx;
  background: #F6F7F9;
  color: #B6C6D6;
  font-size: 20rpx;
}
.null-data .line {
  width: 310rpx;
  height: 1rpx;
  background: #B6C6D6;
  position: absolute;
  left: calc(50% - 145rpx);
  top: 10rpx;
  z-index: 1;
}
.replay-null {
  width: 100%;
  margin-bottom: 140rpx;
}
.replay-null .none {
  width: 100%;
  height: 20rpx;
  margin: 40rpx 0rpx;
  position: relative;
}
.replay-null .none .txt {
  width: 136rpx;
  height: 20rpx;
  white-space: nowrap;
  line-height: 20rpx;
  text-align: center;
  position: absolute;
  left: calc(50% - 78rpx);
  top: 0rpx;
  z-index: 2;
  padding: 0rpx 20rpx;
  background: #E5EDF1;
  color: #B6C6D6;
  font-size: 20rpx;
}
.replay-null .none .line {
  width: 310rpx;
  height: 1rpx;
  background: #B6C6D6;
  position: absolute;
  left: calc(50% - 145rpx);
  top: 10rpx;
  z-index: 1;
}
.replay-btn {
  width: calc(100% - 40rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin: 10rpx 20rpx;
  border-radius: 40rpx;
  color: #fff;
  background: #647484;
  font-size: 28rpx;
  position: fixed;
  left: 0;
  bottom: 10rpx;
  z-index: 998;
  margin-bottom: env(safe-area-inset-bottom);
  opacity: 0.9;
  letter-spacing: 10rpx;
}
.replay-btn:active {
  opacity: 0.8;
}

