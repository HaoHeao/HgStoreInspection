page {
  height: auto;
  font-size: 28rpx;
}
.container {
  width: 100%;
}
/* Add a thumb */
image {
  height: auto;
}
.img {
  width: 100%;
}
.fadeIn {
  -webkit-animation: fadeIn 300ms linear;
          animation: fadeIn 300ms linear;
}
.fadeIn500 {
  -webkit-animation: fadeIn 500ms linear;
          animation: fadeIn 500ms linear;
}
.fadeIn800 {
  -webkit-animation: fadeIn 800ms linear;
          animation: fadeIn 800ms linear;
}
@-webkit-keyframes fadeIn {
0% {
    opacity: 0.2;
}
100% {
    opacity: 1;
}
}
@keyframes fadeIn {
0% {
    opacity: 0.2;
}
100% {
    opacity: 1;
}
